<Window x:Class="Rusal_228.Control_Defects_WND"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rusal_228"
        mc:Ignorable="d"
        Title="Defects" Height="550" Width="600" Loaded="Window_Loaded">
    <StackPanel>
        <Grid Margin="15,0,15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Номер балки" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="15,10,15,0" VerticalAlignment="Top" FontSize="15"/>
            <Label Content="Тип дефекта" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Margin="15,10,15,0" VerticalAlignment="Top" FontSize="15"/>
            <Label Content="Длина дефекта в см" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" Margin="15,10,15,0" VerticalAlignment="Top" FontSize="15"/>

            <ComboBox x:Name="Column_Numb" FontSize="15" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" Margin="15,0,15,5" VerticalAlignment="Top" Height="30" />
            <ComboBox x:Name="Type_defect" FontSize="15" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="15,0,15,5" VerticalAlignment="Top" Height="30" />
            <TextBox x:Name="Lenght_defect" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Margin="15,0,15,5" FontSize="15" Height="30" />


            <Button x:Name="Del" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Content="Удалить" FontSize="15"  Margin="70,5,15,15" Background="LightGray" HorizontalAlignment="Left" Width="200"/>
            <Button x:Name="Add_def" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Content="Добавить дефект" FontSize="15"  Margin="15,5,70,15" Background="LightGray" HorizontalAlignment="Right" IsDefault="True" Width="200"/>
        </Grid>
        <Grid>
            <Label x:Name="Defect_info" Content="Дефекты балки " HorizontalAlignment="Stretch" Margin="30,0,15,15" VerticalAlignment="Top"  FontSize="20"  />

            <Border Background="LightGray" Margin="30,40,30,20" CornerRadius="20" BorderBrush="Gray" BorderThickness="1">
                <ListBox x:Name="Defect_List"  HorizontalAlignment="Stretch" Margin="10,10,10,10"  VerticalAlignment="Top" Height="250" Background="LightGray" BorderThickness="0" FontSize="20"/>
            </Border>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="Cancel" Grid.Column="0" Grid.Row="0" Content="Отмена" FontSize="15"  Margin="30,5,15,15" Background="LightGray" IsCancel="True" />
            <Button x:Name="Done" Grid.Column="1" Grid.Row="0" Content="Готово" FontSize="15"  Margin="15,5,30,15" Background="LightGray" IsDefault="True" />
        </Grid>
    </StackPanel>
</Window>
